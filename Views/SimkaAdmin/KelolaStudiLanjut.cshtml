            }
            <div class="card cardMargin">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="flex-grow-1">Pencarian</h5>
                    <a class=" text-light btn btn-success"
                       onclick="gotoAddEdit(0)"><i class="fa fa-plus"></i> Tambah Data Studi Lanjut </a>
                </div>
                <div class="card-body">
                    @*<h5 class="card-title">Special title treatment</h5>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                <a href="#" class="btn btn-primary">Go somewhere</a>*@
                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="inputNPP" class=" col-form-label">NPP</label>
                            <input class="form-control form-control-sm" id="inputNPP" placeholder="00.000.001">
                        </div>
                        <div class="col-md-6">
                            <label for="inputJenjang" class=" col-form-label">Jenjang</label>
                            <select class="form-control form-control-sm" id="inputJenjang">
                                <option value="">-All-</option>
                                @foreach (var item in Model.refJenjang)
                                {
                                    <option value="@item.IdRefJenjang">@item.Deskripsi</option>
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="inputNama" class=" col-form-label">Nama</label>
                            <input class="form-control form-control-sm" id="inputNama" placeholder="Nama">
                        </div>
                        <div class="col-md-6">
                            <label for="inputUniversitas" class=" col-form-label">Universitas</label>
                            <select class="form-control form-control-sm" id="inputUniversitas">
                                <option value="">-All-</option>
                                @foreach (var item in Model.listUniversitas)
                                {
                                    <option value="@item">@item</option>
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="inputDalamLuarNegeri" class="col-form-label">Dalam / Luar Negeri</label>
                            <input class="form-control form-control-sm" id="inputNama" placeholder="Nama">
                        </div>
                        <div class="col-md-6">
                            <label for="inputNegara" class="col-form-label">Negara</label>
                            <select class="form-control form-control-sm" id="inputDalamLuarNegeri">
                                <option value="">-All-</option>

                                <option value="D">Dalam Negeri</option>
                                <option value="L">Luar Negeri</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-6">
                            <label for="inputStatusStudi" class="col-form-label">Status Studi</label>
                            <select class="form-control form-control-sm" id="inputStatusStudi">
                                <option value="">-All-</option>

                                @foreach (var item in Model.refStatusStudi)
                                {
                                    <option value="@item.IdRefSs">@item.Deskripsi</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">

                        </div>
                    </div>

                    @*<div class="form-group row">
                    <label for="inputFakultas" class="col-sm-2 col-form-label">Fakultas</label>
                    <div class="col-sm-3">
                        <input class="form-control form-control-sm" id="inputFakultas" placeholder="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputProgramStudi" class="col-sm-2 col-form-label">Program Studi</label>
                    <div class="col-sm-3">
                        <input class="form-control form-control-sm" id="inputProgramStudi" placeholder="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputKota" class="col-sm-2 col-form-label">Kota</label>
                    <div class="col-sm-3">
                        <input class="form-control form-control-sm" id="inputKota" placeholder="">
                    </div>
                </div>*@



                    @*<div class="form-group row">
                    <label for="inputTglMulai" class="col-sm-2 col-form-label">Tanggal Mulai</label>
                    <div class="col-sm-3">
                        <input class="form-control form-control-sm" type="date" id="inputTglMulai" placeholder="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputTargetLulus" class="col-sm-2 col-form-label">Target Lulus</label>
                    <div class="col-sm-3">
                        <input class="form-control form-control-sm" id="inputTargetLulus" placeholder="">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="inputTglLulus" class="col-sm-2 col-form-label">Tanggal Lulus</label>
                    <div class="col-sm-3">
                        <input class="form-control form-control-sm" type="date" id="inputTglLulus" placeholder="">
                    </div>
                </div>*@



                    @*<div class="form-group row">
                    <label for="inputSumberBiaya" class="col-sm-2 col-form-label">Sumber Biaya </label>
                    <div class="col-sm-5">
                        <select class="form-control form-control-sm" id="inputSumberBiaya">
                            <option value="">-All-</option>
                            @foreach (var item in Model.refSumberBiaya)
                            {
                                <option value="@item.IdSumberBiaya">@item.Deskripsi</option>
                            }

                        </select>
                    </div>
                </div>*@
                    <button style="margin-right: 1%; padding: 0.3rem 2rem;" class="btn  btn-danger" onclick="resetPencarian()">Reset Filter</button>

                    <button style="padding:0.3rem 2rem;" class="btn  btn-primary" onclick="getDataStudiLanjutByCriteria()">Cari</button>

                </div>



            </div>
            <div class="card cardMargin">
                <div class="card-header">
                    <h5>Data Studi Lanjut</h5>

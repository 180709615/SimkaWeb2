@section Scripts{

    <script src="https://code.jquery.com/ui/1.11.1/jquery-ui.min.js"></script>

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.1/themes/smoothness/jquery-ui.css" />

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>


    <!--toastr-->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <!--sweetalert-->
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>*@

    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
    @*<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>*@





    <script>
        var popup, dataTable;


        var npp = "", nama = "", idJenjang = "", idSumberBiaya = "", Universitas = "", Fakultas = "", ProgramStudi = "", Kota = "", Negara = "";
        var tanggalMulai = "", tanggalLulus = "", targetLulus = "", DalamAtauLuarNegeri = "", idRefSs = "";
        $(document).ready(function () {
            dataTable = $('#example').DataTable({
                "responsive": true,
                "ajax": {
                    "url": "/SimkaAdmin/LoadDataStudiLanjutbyCriteria",
                    "type": "POST",
                    "datatype": "json",
                    "data": function (d) {
                        d.npp = npp,
                            d.nama = nama,
                            d.idJenjang = idJenjang,
                            d.idSumberBiaya = idSumberBiaya,
                            d.Universitas = Universitas,
                            d.Fakultas = Fakultas,
                            d.ProgramStudi = ProgramStudi,
                            d.Kota = Kota,
                            d.Negara = Negara,
                            d.tanggalMulai = tanggalMulai,
                            d.tanggalLulus = tanggalLulus,
                            d.targetLulus = targetLulus,
                            d.DalamAtauLuarNegeri = DalamAtauLuarNegeri,
                            d.idRefSs = idRefSs

                    },
                },
                "columns": [
                    {
                        data: "ID_STUDI_LANJUT",
                        title: "ID",
                        name: "ID",
                        type: "readonly"

                    },
                    {
                        data: "NAMA",
                        title: "Nama",
                        type: "readonly"
                    },
                    { data: "JENJANG", title: "Jenjang" },
                    { data: "NAMA_SEKOLAH", title: "Nama Sekolah" },
                    { data: "PRODI", title: "Prodi" },
                    { data: "STATUS_STUDI", title: "Status Studi" },
                    /*{ data: "DalamAtauLuarNegeri", title: "Dalam / Luar Negeri" },*/


                    {
                        "data": "ID_STUDI_LANJUT", // diganti sama id
                        "render": function (data) {
                            return "<a class='btn btn-default btn-sm' onclick=gotoAddEdit(" + data + ")><i class='fa fa-pencil'></i> Edit</a><a class=' text-light btn btn-danger btn-sm' style='margin-left:5px' onclick=Delete(" + data + ")><i class='fa fa-trash'></i> Delete</a>";
                        }
                    }
                ],
                "language": {
                    "emptyTable": "no data found."
                }
            });
        });


        function ShowPopup(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);
                    popup = formDiv.dialog({
                        modal: true,
                        autoOpen: true,
                        resizeable: false,
                        width: "auto",
                        height: 600,
                        title: 'Add or Edit Data',
                        close: function () {
                            popup.dialog('destroy').remove();
                        }
                    });
                });
        }


        function SubmitAddEdit(form) {
            Swal.fire({
                title: 'Apakah data yang Anda isi sudah benar?',
                showCancelButton: true,
                confirmButtonText: 'Save',
                denyButtonText: `Don't save`,
            }).then((result) => {
                $.validator.unobtrusive.parse(form);
                if ($(form).valid()) {
                    var data = $(form).serializeJSON();
                    data = JSON.stringify(data);
                    console.log(data);
                    $.ajax({
                        type: 'POST',
                        url: '/SimkaAdmin/PostStudiLanjut',
                        data: data,

                        contentType: 'application/json',
                        success: function (data) {
                            if (data.success) {
                                popup.dialog('close');
                                ShowMessage(data.message);
                                dataTable.ajax.reload();
                            }
                        },
                        error: function (data) {
                            alert("Telah terjadi kesalahan dengan kode : " + data.status + ", Pastikan semua isian data sudah diisi");
                        }
                    });

                } else {
                    console.log("form tidak valid")
                }
            });

            return false;
        }

        function Delete(id) {
            Swal.fire({
                title: "Anda yakin ingin menghapus?",
                icon: "warning",
                showDenyButton: true,
                denyButtonText:"Tidak",
                confirmButtonColor: '#3085d6',
                confirmButtonText: "Ya",
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: 'GET',
                        url: '/SimkaAdmin/DeleteStudiLanjut/' + id,
                        success: function (data) {
                            if (data.success) {
                                ShowMessage(data.message);
                                dataTable.ajax.reload();
                            }
                        }, error: function (data) {
                            toastr.error("Delete failed");

                        }
                    });
                }
                Swal.close()

            })


        }

        function getDataStudiLanjutByCriteria() {


            npp = $("#inputNPP").val()
            nama = $("#inputNama").val()
            idJenjang = $("#inputJenjang").val()
            idSumberBiaya = $("#inputSumberBiaya").val()
            Universitas = $("#inputUniversitas").val()
            Fakultas = $("#inputFakultas").val()
            ProgramStudi = $("#inputProgramStudi").val()
            Kota = $("#inputKota").val()
            Negara = $("#inputNegara").val()
            tanggalMulai = $("#inputTglMulai").val()
            tanggalLulus = $("#inputTglLulus").val()
            targetLulus = $("#inputTargetLulus").val()
            DalamAtauLuarNegeri = $("#inputDalamLuarNegeri").val()
            idRefSs = $("#inputStatusStudi").val()


            console.log("npp =" + npp)

            dataTable.ajax.reload();

        }

        function resetPencarian() {
            $("#inputNPP").val("");
            $("#inputNama").val("");
            $("#inputJenjang").val("");
            $("#inputSumberBiaya").val("");
            $("#inputUniversitas").val("");
            $("#inputFakultas").val("");
            $("#inputNPP").val("");
            $("#inputProgramStudi").val("");
            $("#inputKota").val("");
            $("#inputNegara").val("");
            $("#inputTglMulai").val("");
            $("#inputTglLulus").val("");
            $("#inputTargetLulus").val("");
            $("#inputDalamLuarNegeri").val("");
            $("#inputStatusStudi").val("");



            getDataStudiLanjutByCriteria();
        }


        function ShowMessage(msg) {
            toastr.success(msg);
        }

        function gotoAddEdit(id) {
            window.location.href = "AddEditStudiLanjut?id=" + id;
        }
    </script>



}

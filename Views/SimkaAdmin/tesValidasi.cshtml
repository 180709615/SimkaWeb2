
@{
    ViewData["Title"] = "AddEditStudiLanjut";
    Layout = "~/Views/Shared/_LayoutDynamic.cshtml";
}

<!DOCTYPE html>


<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css">

    <style>
        .title-card {
            color: #F2AA4C;
            padding: 15px;
        }

        .content-wrapper {
            border-radius: 10px;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            min-height: fit-content !important;
        }

        .breadcrumb {
            background-color: transparent;
        }
    </style>

</head>
<body>
    <div class="px-3 mt-3">
        <div class="content-wrapper p-3">
            <h4 class="head-title">Status Kerjasama</h4>
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Referensi" asp-action="IndexStatus">Referensi Status Kerjasama</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Tambah</li>
                </ol>
            </nav>
            <div class="px-2">

                <form class="needs-validation" novalidate asp-action="StoreStatus" asp-controllers="Referensi" method="post" id="addJenisKerjasama">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="inputStatus" class="form-label">Masukkan status kerjasama baru</label>
                        <input type="text" class="form-control" name="inputStatus" required>
                        <div class="invalid-feedback">
                            Field tidak boleh kosong!
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
</body>

</html>
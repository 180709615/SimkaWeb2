

@{
    ViewData["Title"] = "Login";

    Layout = "";
}
<html lang="en">
<head>
    <title>Selamat datang di SIMKA!</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />

    <!-- Material Icon -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet" />

    <!-- Animate on Scroll -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    @*<link href="~/sweetalert/sweetalert.min.js" />*@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
    <div class="page-wrapper">
        @if (TempData["err_message"] != null)
        {
            <script>
            Swal.fire({
                title: 'SIMKA said : ',
                text: "@TempData["err_message"].ToString()",
                confirmButtonColor: '#f2aa4c',
                confirmButtonText: 'Close'
            })
            </script>
        }
        <!-- Card Wrapper -->
        <div class="d-flex justify-content-center align-items-center card-wrapper">
            <!-- Card Login -->
            <div data-aos="zoom-out-up" class="login-card">
                <div class="row login-card-row">
                    <!-- Left Side Column -->
                    <div class="col-md-7 col-xs-12 pt-2 px-4">
                        <!-- Atma Jaya Icon -->
                        <img data-aos="fade-right"
                             data-aos-delay="200"
                             src="~/images/atma-logo.png"
                             alt="Atma Icon"
                             class="img-fluid login-atma-icon mx-auto d-flex" />

                        <!-- Sistem Name-->
                        <p data-aos="fade-right" data-aos-delay="300" class="text-title">
                            Sistem Informasi Manajemen Kepegawaian
                        </p>

                        <!-- Description -->
                        <p data-aos="fade-right"
                           data-aos-delay="400"
                           class="text-description">
                            Aplikasi SIMKA (Sistem Informasi Manajemen Kepegawaian) Universitas Atma Jaya Yogyakarya adalah aplikasi berbasis web yang digunakan untuk menunjang proses administrasi kepegawaian di Universitas Atma Jaya Yogyakarta. SIMKA bertujuan untuk membuat manajemen sumber daya manusia di Atma Jaya Yogyakarta menjadi terintegrasi.
                        </p>

                        <!-- Link Helpdesk -->
                        @*<p data-aos="fade-right"
                               data-aos-delay="500"
                               class="text-description pb-2">
                                <i class="mdi mdi-book-open-variant"></i> download manual simka
                                <a href="">disini</a>
                                <br />
                                <i class="mdi mdi-phone mb-3"></i> ksi helpdesk
                                <a href="">disini</a>
                            </p>*@

                        <!-- Yellow Flower Icon -->
                        <div class="wrapper-zero d-flex justify-content-end">
                            <img data-aos="zoom-in-up"
                                 data-aos-delay="800"
                                 class="shape-yellow"
                                 src="~/images/decoration-yellow.png"
                                 alt="decoration-yellow" />
                        </div>
                    </div>

                    <!-- Right Side Column -->
                    <div class="col-md-5 col-xs-12 login-right-content">
                        <!-- Title Login -->
                        <p data-aos="fade-left"
                           data-aos-delay="200"
                           class="login-card-text">
                            Log in
                        </p>

                        @*FORM LOGIN*@
                        <form asp-action="do_login" asp-controller="Home" method="post">
                            <!-- Username Field -->

                            <div data-aos="fade-left"
                                 data-aos-delay="300"
                                 class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-account" aria-hidden="true"> </i>
                                </span>
                                <input type="text"
                                       name="username"
                                       class="form-control"
                                       placeholder="Username"
                                       aria-label="Username"
                                       aria-describedby="addon-wrapping" />
                            </div>

                            <!-- Password Field -->
                            <div data-aos="fade-left"
                                 data-aos-delay="400"
                                 class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-key" aria-hidden="true"> </i>
                                </span>
                                <input type="password"
                                       name="password"
                                       class="form-control"
                                       placeholder="Password"
                                       aria-label="Password"
                                       aria-describedby="addon-wrapping" />
                            </div>
                            <div class="input-group d-flex justify-content-center mb-3">
                                <a href="/Home/LupaPassword">Lupa Password</a>

                            </div>
                            <!-- Submit Button -->
                            <div data-aos="fade-left"
                                 data-aos-delay="500"
                                 class="input-group d-flex justify-content-center">
                                
                                <input type="submit"
                                       class="btn btn-primary"
                                       name="buttonLogin" />
                            </div>
                        </form>

                        <!-- Motto -->
                        <div class="mt-auto wrapper-motto">
                            <p data-aos="zoom-in-up" data-aos-delay="900" class="motto">
                                UNGGUL - INKLUSIF - HUMANIS - BERINTEGRITAS
                            </p>
                        </div>

                        <div class="wrapper-two d-flex justify-content-end">
                            <img data-aos="zoom-in-up"
                                 data-aos-delay="800"
                                 class="shape-blue"
                                 src="~/images/decoration-blue-tip-2.png"
                                 alt="decoration-blue-tip-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-login pt-2">
            <p>
                &copy; 2021 Kantor Sistem Informasi Universitas Atma Jaya Yogyakarta
            </p>
        </div>
    </div>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Animate on Scroll Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>
</body>

</html>